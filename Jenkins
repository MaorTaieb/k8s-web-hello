pipeline {
    agent any

    environment {
        IMAGE_NAME = "maortaieb/k8s-web-hello"
        IMAGE_TAG  = "${env.GIT_COMMIT.take(8)}"   // or use BUILD_NUMBER or "latest"
        NAMESPACE  = "test1"
        DEPLOYMENT = "k8s-hello-web1"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Create Namespace (if not exists)') {
            steps {
                withKubeConfig([credentialsId: 'kubeconfig-local']) {
                    sh 'kubectl create namespace ${NAMESPACE} --dry-run=client -o yaml | kubectl apply -f -'
                }
            }
        }

        stage('Deploy to Local Kubernetes') {
            steps {
                withKubeConfig([credentialsId: 'kubeconfig-local']) {
                    sh '''
                    # Option 1: Use latest tag
                    # IMAGE_FULL=${IMAGE_NAME}:latest

                    # Option 2: Use Git commit hash as tag (recommended - immutable)
                    IMAGE_FULL=${IMAGE_NAME}:${IMAGE_TAG}

                    echo "Deploying image: ${IMAGE_FULL}"

                    # Update the deployment with the new image
                    kubectl set image deployment/${DEPLOYMENT} \
                        ${DEPLOYMENT}=${IMAGE_FULL} \
                        --namespace=${NAMESPACE} --record

                    # Or if deployment doesn't exist yet, apply full manifests
                    kubectl apply -f k8s/deployment.yaml
                    kubectl apply -f k8s/service.yaml

                    # Wait for rollout
                    kubectl rollout status deployment/${DEPLOYMENT} -n ${NAMESPACE} --timeout=120s
                    '''
                }
            }
        }

        stage('Expose Service (Local Access Info)') {
            steps {
                script {
                    if (env.CLUSTER_TYPE == 'kind') {
                        sh "echo 'Access your app at: http://localhost:3000'"
                        sh "kubectl port-forward svc/k8s-hello-web1 3000:3000 -n test1 --address 0.0.0.0 > /dev/null 2>&1 &"
                    } else if (env.CLUSTER_TYPE == 'minikube') {
                        sh "minikube service k8s-hello-web1 -n test1 --url"
                    } else {
                        sh "echo 'Open service with:'"
                        sh "echo 'kubectl port-forward svc/k8s-hello-web1 3000:3000 -n test1'"
                    }
                }
            }
        }
    }

    post {
        success {
            echo "App successfully deployed! Visit: http://localhost:3000 (if port-forwarded)"
        }
        failure {
            echo "Deployment failed!"
        }
    }
}